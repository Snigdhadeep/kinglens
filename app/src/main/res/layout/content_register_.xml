<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.king.king_lens.Register_Activity"
    tools:showIn="@layout/activity_register_">

    <EditText
        android:id="@+id/firstname"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/rect_edittext"
        android:hint=" Name"
        android:textColor="#000000"
        android:textColorHint="#f3787d7e"
        android:layout_marginRight="16dp"


        >
    </EditText>
    <View
        android:id="@+id/view21"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/email"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/rect_edittext"
        android:hint=" Email"
        android:textColor="#000000"
        android:textColorHint="#f3787d7e"
        android:layout_marginRight="16dp"


        >
    </EditText>
    <View
        android:id="@+id/view9"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/password"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/rect_edittext"
        android:hint=" Password"
        android:textColor="#000000"
        android:textColorHint="#f3787d7e"
        android:layout_marginRight="16dp"


        >
    </EditText>




    <View
        android:id="@+id/view10"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true" />
    <Spinner
        android:id="@+id/gender"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/rect_edittext"
        android:entries="@array/gender_array"
        android:prompt="@string/genderprompt"
        android:layout_marginRight="16dp"
        >
    </Spinner>

    <View
        android:id="@+id/view22"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/contact_no"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/rect_edittext"
        android:hint=" ContactNo."
        android:textColor="#000000"
        android:textColorHint="#f3787d7e"
        android:layout_marginRight="16dp"


        >
    </EditText>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/reg_btn"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
